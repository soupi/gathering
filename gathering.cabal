name:                gathering
version:             0.1.0
synopsis:            Self hosted website for announcing group events
description:         Please see README.md
homepage:            https://github.com/soupi/gathering#readme
license:             Apache-2.0
license-file:        LICENSE
author:              Gil Mizrahi
maintainer:          gilmi@posteo.net
copyright:           2017 Gil Mizrahi
category:            Web
build-type:          Simple
cabal-version:       >=1.10
extra-source-files:  README.md
                     database_scripts/database.ddl
                     database_scripts/delete_database.ddl
                     database_scripts/gather.ddl
                     database_scripts/delete_gather.ddl

library
  hs-source-dirs:      src
  exposed-modules:     Web.Gathering
                       Web.Gathering.Database
                       Web.Gathering.HashPassword
                       Web.Gathering.Model
                       Web.Gathering.Types
                       Web.Gathering.Utils
                       Web.Gathering.Config
                       Web.Gathering.Html
                       Web.Gathering.Run
                       Web.Gathering.Router
                       Web.Gathering.Actions.Utils
                       Web.Gathering.Actions.Auth
                       Web.Gathering.Actions.Events
                       Web.Gathering.Actions.Attending
                       Web.Gathering.Forms.Utils
                       Web.Gathering.Forms.Sign
                       Web.Gathering.Forms.Settings
                       Web.Gathering.Forms.EditEvent
                       Web.Gathering.Workers.Logger
                       Web.Gathering.Workers.Cleaner
                       Web.Gathering.Workers.SendEmails

  --other-modules:       Web.Gathering
  ghc-options:         -Wall -fno-warn-type-defaults
  default-language:    Haskell2010
  build-depends:       base >= 4.7 && < 5
                     -- framework
                     , Spock >= 0.11
                     -- html
                     , lucid
                     , Spock-lucid
                     -- background tasks like sending mails to users
                     , turtle
                     , smtp-mail
                     -- tls support
                     , warp
                     , warp-tls
                     -- auth routing
                     , hvect
                     -- password hashing
                     , pwstore-purehaskell
                     -- Forms handling
                     , digestive-functors
                     , digestive-functors-lucid
                     , Spock-digestive
                     -- database integration
                     , hasql
                     , hasql-transaction
                     -- input validation
                     , html-email-validate
                     , network-uri
                     -- handling configurations
                     , configurator
                     -- json
                     , aeson
                     -- time handling
                     , time
                     -- render event as markdown
                     , cheapskate
                     , cheapskate-lucid
                     -- serve static files
                     , wai-middleware-static
                     -- utils
                     , containers
                     , bytestring
                     , text
                     , directory
                     , process
                     , optparse-applicative
                     , transformers
                     , mtl
                     , contravariant
                     , stm
                     , pureMD5

  default-extensions:  OverloadedStrings
                     , LambdaCase
                     , ViewPatterns
                     , ScopedTypeVariables
                     , RecordWildCards
                     , NamedFieldPuns
                     , TupleSections
                     , DeriveFunctor
                     , DeriveGeneric
                     , EmptyDataDecls

executable gather
  hs-source-dirs:      app
  main-is:             Main.hs
  default-language:    Haskell2010
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base >= 4.7 && < 5
                     , gathering

